{
	"include": [ "src/**/*" ],
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": [ "ESNext" ],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"outDir": "dist",
		"types": [ "node", "./src/config" ]
	}
}